<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <!--ID Title-->
    <com.orientdata.lookforcustomers.widget.MyTitle
        android:id="@+id/fm_home_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvCertificateStatus"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="未认证"
                android:textColor="@color/no_certifacation"
                android:textSize="12sp" />

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/c_e8e8e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="请上传《营业执照》或《组织机构代码证》"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_at_enterprise_certification_upload"
                android:layout_width="190dp"
                android:layout_height="253dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@mipmap/icon_license" />
            <!--灰色隔离区域-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="7dp"
                android:background="#f5f2f2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="所属行业"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <!--<include-->
                    <!--android:id="@+id/rlIndustry"-->
                    <!--layout="@layout/pull_down_text_view"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--/>-->

                <RelativeLayout
                    android:id="@+id/rlIndustry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/et_background">

                    <TextView
                        android:id="@+id/tvIndustry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="@string/input_industry"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/choose" />
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="11dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/c_eeeeee" />
                <!--<include-->
                    <!--android:id="@+id/rlSub"-->
                    <!--layout="@layout/pull_down_text_view"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--/>-->
                <RelativeLayout
                    android:id="@+id/rlSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/et_background">

                    <TextView
                        android:id="@+id/tvSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="@string/input_sub_industry"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivChooseCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src ="@mipmap/choose" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_at_enterprise_certification_industry_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <!--<CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
