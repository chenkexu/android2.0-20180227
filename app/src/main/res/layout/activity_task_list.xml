<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_fafafa"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <com.orientdata.lookforcustomers.widget.MyTitle
        android:id="@+id/titleSearch"
        android:layout_below="@id/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.flyco.tablayout.SlidingTabLayout
        android:layout_gravity="center"
        tl:tl_tab_padding="7dp"
        android:id="@+id/tl_5"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_underline_color="#1A000000"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="#404040"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="40dp"/>

  <!--  <com.flyco.tablayout.SlidingTabLayout
        tl:tl_underline_height="1dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_underline_color="@color/colorPrimary"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="#404040"
        tl:tl_indicator_corner_radius="1.5dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        tl:tl_indicator_width="10dp"/>-->


    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>