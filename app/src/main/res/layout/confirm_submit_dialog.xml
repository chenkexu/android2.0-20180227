<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_white_load_bg1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRemindTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/textview_round_border_top"
        android:gravity="center"
        android:text="确认提交？"
        android:textColor="@color/c_1C1C1C"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/submit_remind"
        android:textColor="@color/c_d1820"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c_999999"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_white_round_rec"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>