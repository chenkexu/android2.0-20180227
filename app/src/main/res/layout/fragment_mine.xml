    <RelativeLayout
        android:id="@+id/linear_company"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <com.orientdata.lookforcustomers.widget.toggleButton.RoundImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/iv_head_portrait"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/head_default"
            app:type="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/image"
            android:layout_toRightOf="@id/iv_head_portrait"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company"
                android:textColor="@color/bg_white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="北京东方网润科技有限公司"
                android:textColor="@color/bg_white"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            style="@style/mine_right_img"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/next" />

    </RelativeLayout>


    <!--账户余额-->
    <RelativeLayout
        android:id="@+id/rv_balance_account"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_balance_account"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_balance"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_balance_account"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_balance_account"
            android:text="账户余额" />

        <ImageView
            android:id="@+id/iv_balance_account_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>

    <include layout="@layout/line_gray"/>



    <!--我的佣金-->
    <RelativeLayout
        android:id="@+id/rl_my_commission"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_my_commission"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_yongjin" />

        <TextView
            android:id="@+id/tv_my_commission"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_my_commission"
            android:text="我的佣金" />

        <ImageView
            android:id="@+id/iv_my_commission_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>



    <include layout="@layout/line_gray"/>
    <!--佣金提现-->
    <RelativeLayout
        android:id="@+id/rl_commission_withdraw"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_commission_withdraw"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_withdraw" />

        <TextView
            android:id="@+id/tv_commission_withdraw"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_commission_withdraw"
            android:text="佣金提现" />

        <ImageView
            android:id="@+id/iv_commission_withdraw_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>






    <include layout="@layout/line_gray"/>
    <!--开发票-->
    <RelativeLayout
        android:id="@+id/rl_invoice"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_invoice"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_invoice" />

        <TextView
            android:id="@+id/tv_invoice"
            style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_invoice"
            android:text="开发票" />

        <ImageView
            android:id="@+id/iv_invoice_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>


    <include layout="@layout/line_gray"/>
    <!--联系客服-->
    <RelativeLayout
        android:id="@+id/rl_service"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_service"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_customer_service" />

        <TextView
           style="@style/mine_text"
            android:layout_toRightOf="@+id/iv_service"
            android:text="联系客服" />

        <ImageView
            android:id="@+id/iv_service_arrow_right"
         style="@style/mine_right_img"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>



    <include layout="@layout/line_gray"/>
    <!--分享-->
    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_share"
            style="@style/mine_left_img"
            app:srcCompat="@mipmap/img_share" />

        <TextView
            android:layout_toRightOf="@+id/iv_share"
            android:text="分享"
            android:id="@+id/tv_share"
            style="@style/mine_text" />

        <ImageView
            android:id="@+id/iv_share_arrow_right"
            style="@style/mine_right_img"
            app:srcCompat="@drawable/arrow_right" />

    </RelativeLayout>
    <include layout="@layout/line_gray"/>


</LinearLayout>