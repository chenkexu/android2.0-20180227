<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/back_white" />

        <com.orientdata.lookforcustomers.widget.ClearableEditText
            android:id="@+id/clearEdit"
            style="@style/common_edittext1"
            android:layout_width="0dp"
            android:layout_weight="11"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:cursorVisible="true"
            android:hint="请输入搜索内容"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:textCursorDrawable="@drawable/cursor_style" />


        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:paddingRight="12dp"
            android:src="@mipmap/closed"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rightText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="12dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"
            android:text="搜索" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/c_fafafa" />

    <RelativeLayout
        android:id="@+id/rlRemind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSearchRecordd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/hot"
            android:drawablePadding="7dp"
            android:text="搜索记录"
            android:textColor="@color/text_gray"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/tvSearchRecordd"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/delete" />
    </RelativeLayout>

    <com.orientdata.lookforcustomers.widget.FluidLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:maxlinecount="0"/>

</LinearLayout>