<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_announcement"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="15dp"
    android:paddingBottom="10dp"
    android:paddingRight="15dp">


    <ImageView
        android:id="@+id/iv_oval"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:src="@mipmap/oval"
         />

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/iv_oval"
        android:layout_toRightOf="@+id/iv_oval"
        android:maxLines="1"
        android:textColor="#1c1c1c"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_topic"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_oval"
        android:layout_toRightOf="@+id/iv_oval"
        android:maxLines="1"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_topic"
        android:layout_toRightOf="@+id/tv_topic"
        android:gravity="right"
        android:textColor="#999999"
        android:textSize="11sp" />
</RelativeLayout>
