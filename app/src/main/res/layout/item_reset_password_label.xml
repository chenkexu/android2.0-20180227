<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_password"
    style="@style/login_btn_style"
    >

    <ImageView
        android:id="@+id/iv_password_hint"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/select_login_password_hint"
        />

    <EditText

        android:layout_alignBottom="@id/iv_password_hint"
        android:layout_toLeftOf="@id/iv_password_hint"
        android:background="@null"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_login_passwrod_hint"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/reset_password_text_hint"
        android:textSize="@dimen/text_size_13"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/text_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />





    <View
        style="@style/line_style"
        android:layout_below="@id/et_password" />

