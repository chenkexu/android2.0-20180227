<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more" />
        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ToggleButton
                android:enabled="false"
                android:clickable="false"
                android:id="@+id/toggle_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/select_photo_bg3"
                android:textOff=""
                android:textOn=""
                android:visibility="gone"
                />

           <!-- <ImageView
                android:id="@+id/ivStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:clickable="false"
                android:src="@mipmap/img_redpoint" />-->
        </RelativeLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/ivStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="false"
            android:src="@mipmap/img_redpoint" />
        <TextView
            android:singleLine="true"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/linear"
            android:layout_toRightOf="@+id/linear"
            android:textSize="15sp"
            android:maxEms="10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="贵州省毕节市无法创建寻客通知"
            android:textColor="@color/text_gray" />
        <TextView
            android:text="2018-03-27 15:59:49"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:textColor="@color/c_999999"
            android:textSize="11sp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_fafafa"/>
</LinearLayout>