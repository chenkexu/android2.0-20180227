<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="vertical">
    <TextView
        android:text="请选择"
        android:id="@+id/tvLeftText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_no_selec_border"
        android:gravity="center"
        android:textColor="@color/c_414141"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_alignEnd="@+id/tvLeftText"
        android:layout_alignRight="@+id/tvLeftText"
        android:layout_centerVertical="true"
        android:src="@mipmap/choose" />
</RelativeLayout>