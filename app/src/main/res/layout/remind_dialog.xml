<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_circle_white_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvCerStatus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="零零落落"
        android:gravity="center"
        android:textColor="@color/c_ffffff"
        android:textSize="16sp"
        android:background="@drawable/bg_tv_round_gradient"/>
    <ImageView
        android:id="@+id/ivCerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/no_pass"/>
    <TextView
        android:id="@+id/tvCerRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/c_9c9c9c"
        android:layout_gravity="center"
        android:text="简单快乐分" />

    <TextView
        android:id="@+id/tvToCert"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_tv_round_gradient"
        android:gravity="center"
        android:text="零零落落"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>