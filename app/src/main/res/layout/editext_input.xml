<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:paddingRight="35dp"
        android:textColor="@color/c_474747"
        android:cursorVisible="true"
        android:maxLength="15"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@drawable/cursor_style"
        android:background="@drawable/round_border2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/15"
        android:layout_alignRight="@+id/etContent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/c_9c9c9c"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/tvContentLen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7"
        android:textSize="12sp"
        android:textColor="@color/c_9c9c9c"
        android:text="0" />


</RelativeLayout>