<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_fafafa"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cd_task_order"
        style="@style/order_cardView_style"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <TextView
            android:id="@+id/tv_order_detail"
            android:textColor="@color/text_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textSize="19sp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/order_down"
            android:text="订单详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cd_task_order_person"
        style="@style/order_cardView_style">

        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="@color/text_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:text="目标人群"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/order_text_style"
                android:id="@+id/tv_sex" />
            <TextView
                android:id="@+id/tv_age"
                style="@style/order_text_style" />

            <TextView
                android:id="@+id/tv_user_hobby"
                style="@style/order_text_style" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cd_task_order_area"
        style="@style/order_cardView_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="投放范围"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_address"
                style="@style/order_text_style" />


            <TextView
                android:id="@+id/tv_order_radius"
                style="@style/order_text_style" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cd_task_order_content"
        style="@style/order_cardView_style">
        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="@color/text_gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:text="短信内容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_order_name"
                style="@style/order_text_style" />

            <TextView
                android:id="@+id/tv_order_sigture"
                style="@style/order_text_style" />

            <TextView
                android:id="@+id/tv_order_content"
                style="@style/order_text_style" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cd_task_order_push"
        style="@style/order_cardView_style">
        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="@color/text_gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:text="推送设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_order_push_person"
                style="@style/order_text_style" />

            <TextView
                android:id="@+id/tv_order_push_time"
                style="@style/order_text_style" />

            <TextView
                android:id="@+id/tv_order_test_phone"
                style="@style/order_text_style" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

