<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_auth_code"
    style="@style/login_btn_style"
    >

    <TextView
        android:id="@+id/tv_call_code"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:text="获取验证码"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/et_auth_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tv_call_code"
        android:background="@color/color_09B6F2"
        android:drawableLeft="@mipmap/icon_login_auth_code_hint"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="请输入短信验证码"
        android:inputType="number"
        android:maxLength="8"
        android:singleLine="true"
        android:textColor="@color/color_FFFFFF"
        android:textColorHint="@color/color_81D9F7"
        android:textSize="@dimen/text_size_13"
        />


</RelativeLayout>
