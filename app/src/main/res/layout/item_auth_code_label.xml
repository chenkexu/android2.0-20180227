<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_auth_code"
    style="@style/login_btn_style"
    >

    <TextView
        android:padding="5dp"
        android:background="@drawable/bg_code_round"
        android:id="@+id/tv_call_code"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="获取验证码"
        android:textSize="10sp"
        android:textColor="@color/color_FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_alignBottom="@id/tv_call_code"
        android:layout_toLeftOf="@id/tv_call_code"
        android:background="@null"
        android:id="@+id/et_auth_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_login_auth_code_hint"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="请输入短信验证码"
        android:inputType="number"
        android:maxLength="8"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/text_gray"
        android:textSize="@dimen/text_size_13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        style="@style/line_style"
        android:id="@+id/line"
        android:layout_below="@id/et_auth_code"
       />

</RelativeLayout>
