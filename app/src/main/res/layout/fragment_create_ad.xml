<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_img_at_personnal_certification_upload" />

        <RelativeLayout
            android:id="@+id/rl_show_baidumap"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_marginTop="10dp"
            android:background="#666666">

            <ImageView
                android:id="@+id/iv_show_baidumap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/et_shop_name"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="75dp"
                android:background="@drawable/shape_bg_gray_round_rec3"
                android:gravity="center"
                android:hint="请设置店铺名称"
                android:textColor="#9c9c9c"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dingwei2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:text="[位置]"
                android:textColor="@color/text_gray"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="19dp"
                android:layout_toEndOf="@+id/tv_loc"
                android:layout_toRightOf="@+id/tv_loc"
                android:background="@drawable/shape_bg_gray_round_rec5"
                android:hint="请输入电话"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="#9699A3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_loc"
                android:layout_alignStart="@+id/tv_loc"
                android:layout_below="@+id/et_phone_no"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="北京市朝阳区北辰东路8号11号楼"
                android:textColor="#979797"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_nav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@mipmap/daohang" />

            <TextView
                android:id="@+id/tv_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_nav"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:text="前去商家"
                android:textColor="#979797"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="#fafafa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="任务名称:"
                android:textColor="#7A7C85"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_page_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/shape_bg_gray_round_rec5"
                android:hint="页面名称"
                android:maxLength="8"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="#9c9c9c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_page_name_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="0/8"
                android:textColor="#7A7C85"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="#fafafa" />

        <TextView
            android:id="@+id/tv_next_step"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_tv_round_gradient"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>