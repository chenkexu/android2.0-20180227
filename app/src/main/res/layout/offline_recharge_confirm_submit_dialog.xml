<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_white_load_bg1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRemindTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lineSpacingMultiplier="1.2"
        android:padding="10dp"
        android:text="开户行：是打发时间的佛教送到附近哦i\n账&#160;&#160;&#160;&#160;户：圣诞节佛山警方老看手机了"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <TextView
        android:drawablePadding="3dp"
        android:drawableLeft="@mipmap/icon_warn_red"
        android:textColor="@color/c_d1820"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:text="请注意"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:text="1.为了您的资金安全请勿重复提交!\n2.改提交超过3个工作日未到账后被退回，您可以确认到账后再次提交。"
        android:textColor="@color/c_d1820"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c_999999"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bac_rec_border"
            android:gravity="center"
            android:text="确定提交"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>