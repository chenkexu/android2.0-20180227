<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.orientdata.lookforcustomers.widget.MyTitle
        android:id="@+id/titleMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/order_cardView_style">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|left"
                            android:text="符合筛选标签人数约有"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="我要推送给的人数为"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_person"
                            android:paddingLeft="40dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8888888人"
                            android:textColor="@color/task_gray"
                            android:textSize="12sp" />
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_push_person"
                                android:gravity="center"
                                android:textColor="@color/task_gray"
                                android:textSize="12sp"
                                android:text="4000"
                                android:background="@drawable/btn_no_selec_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="人"
                                android:textColor="@color/task_gray"
                                android:textSize="12sp" />
                        </LinearLayout>



                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_balance_account"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="余额：2000元"
                        android:textColor="#5B5B5B"
                        android:textSize="10sp" />

                    <SeekBar
                        android:progress="20"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:progressDrawable="@drawable/custom_progressbar2"
                        android:layout_marginTop="10dp"
                        android:id="@+id/progressBar" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_progress_min_num"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|left"
                            android:text="1000"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                        <TextView
                            android:id="@+id/tv_progress_max_num"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|right"
                            android:text="10000"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/order_cardView_style">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--推送方式-->
                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="推送方式"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_message_price"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="短信（1元/1条）"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <include layout="@layout/line_gray"/>


                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="短信签名"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:id="@+id/et_enterprise_signature"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="【请输入企业签名2-4个汉字】"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#B3B3B3"
                            android:textCursorDrawable="@drawable/cursor_style"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/iv_ques"
                            android:src="@mipmap/icon_ques"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <include layout="@layout/line_gray"/>





                    <!--短信内容-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <EditText
                                android:hint="请输入短信内容"
                                android:id="@+id/etMsgContent"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:gravity="top|left"
                                android:padding="5dp"
                                android:textColor="@color/text_gray"
                                android:textCursorDrawable="@drawable/cursor_style"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_below="@id/etMsgContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">



                                <TextView
                                    android:id="@+id/tvNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="还可以输入70字符"
                                    android:textColor="@color/task_gray"
                                    android:textSize="11sp" />

                                <TextView
                                    android:gravity="right"
                                    android:id="@+id/tv_unsubscribe"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@id/etMsgContent"
                                    android:text="回复00000退订"
                                    android:textColor="#B3B3B3"
                                    android:textSize="10sp" />

                            </LinearLayout>




                        </RelativeLayout>



                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/order_cardView_style">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <!--推送方式-->
                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="推送时间"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_push_time"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2018-03-03"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <include layout="@layout/line_gray"/>
                    <RelativeLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="测试号码"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />
                     <com.orientdata.lookforcustomers.widget.toggleButton.zcw.togglebutton.ToggleButton
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|center_vertical"
                            android:id="@+id/toggleBold"
                            android:layout_width="50dp"
                            android:layout_height="25dp" />

                 </RelativeLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_test_phone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/line_gray"/>
                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="移动号码"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_test_cm"
                                android:inputType="phone"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:hint="请输入本地移动号码"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#B3B3B3"
                                android:textCursorDrawable="@drawable/cursor_style"
                                android:textSize="12sp"
                                android:visibility="visible" />

                        </LinearLayout>
                        <include layout="@layout/line_gray"/>
                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="联通号码"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_test_cu"
                                android:inputType="phone"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:hint="请输入本地联通号码"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#B3B3B3"
                                android:textCursorDrawable="@drawable/cursor_style"
                                android:textSize="12sp"
                                android:visibility="visible" />

                        </LinearLayout>
                        <include layout="@layout/line_gray"/>
                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="电信号码"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_test_ct"
                                android:inputType="phone"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:hint="请输入本地电信号码"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#B3B3B3"
                                android:textCursorDrawable="@drawable/cursor_style"
                                android:textSize="12sp"
                                android:visibility="visible" />

                        </LinearLayout>
                        <include layout="@layout/line_gray"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|left"
                            android:text="任务名称"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/rt_task_name"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="请输入任务名称"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#B3B3B3"
                            android:textCursorDrawable="@drawable/cursor_style"
                            android:textSize="12sp"
                            android:visibility="visible" />

                    </LinearLayout>
                    <include layout="@layout/line_gray"/>
                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/icon_go_xunke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>