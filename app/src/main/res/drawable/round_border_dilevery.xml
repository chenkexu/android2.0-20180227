<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="0dp" android:bottom="3dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <!-- 边框颜色 宽度 -->
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <!-- 边框圆角 -->
            <corners
                android:radius="3dp"/>
            <padding android:bottom="2dp" android:left="2dp" android:top="2dp"
                android:right="2dp"/>
        </shape>
    </item>
</layer-list>
